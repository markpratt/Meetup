<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="400dp" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#f1e9dc"
        tools:context="jefferyvicente.meetup.friendManager">

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/friendSeach_editText"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="Search for friends" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="search"
            android:id="@+id/search_button"
            android:layout_alignBottom="@+id/friendSeach_editText"
            android:layout_toEndOf="@+id/friendSeach_editText" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/friendManager_ListView"
            android:layout_below="@+id/friendSeach_editText"
            android:layout_alignParentStart="true"
            android:visibility="visible" />
    </RelativeLayout>

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

</android.support.v4.widget.DrawerLayout>
